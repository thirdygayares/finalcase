        System.out.println("     C-> Cancel");
        System.out.print("\nEnter transaction Type: ");
        char transactionType = group3sc.next().charAt(0);

        switch (transactionType) {
            case 'b':
            case 'B':
                balanceInquiry();
                break;
            case 'w':
            case 'W':
                withdrawalOutput();
                break;
